extends /partials/page

block title
    title Vergilius Project
    //hidden attr -> input
block content
    div
        ul.list-inline.breadcrumb(type='none')
            li.list-inline-item
                a(href="/") Home
            li.list-inline-item.active Upload form
    .container.mycontainer
        div(style='text-align:center;')
            if message
                = message
        div
            form(method="post" enctype="multipart/form-data" action="/admin")
                div(style='text-align:center;')
                    |Choose a file to upload:
                    label.btn.btn-default
                        input(type='file', name='file')
                div(style='text-align:center;')
                    |Upload your file:
                    label.btn.btn-default
                        input(type='submit', value='Upload')
