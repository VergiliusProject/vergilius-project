extends /partials/page

block title
    title Vergilius Project
block content
    .container
        .cmd
            ul.list-inline.breadcrumb(type='none')
                li.list-inline-item
                    | >
                    a(href='/' tabindex="-1")  Home
                li.list-inline-item Admin
    .container.indent
        .mainblock
            h3(style='text-align: center') Welcome!
            form.form-horizontal(style='width:35%; margin:auto;', action='/login', method='post')
                .form-group
                    label.control-label.col-sm-2(for='username') Username:
                    .col-sm-10
                        input#username.form-control(type='text', name='username', style='width: 355px;', placeholder='Enter username', tabindex="-1")
                .form-group
                    label.control-label.col-sm-2(for='password') Password:
                    .col-sm-10
                        input#password.form-control(type='password', name='password', style='width: 355px;', placeholder='Enter password', tabindex="-1")
                .form-group(align='right')
                    .col-sm-offset-2.col-sm-10
                        input(type='hidden', name='${_csrf.parameterName}', value='${_csrf.token}')
                        button.btn.btn-info(type='submit', tabindex="-1") Submit

